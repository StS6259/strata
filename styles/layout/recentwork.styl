.recentworkArticle
  &__image
    display block
    border-radius 3rem
    max-width 100%
    position relative
    text-align center
    img
      display block
  &__veil
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    border-radius 0.35rem
    z-index 2
    background rgba(black, 0.5)
    transition .3s
    opacity 0
    height 100%
    &:hover
      opacity 1
    &:after
      position absolute
      content attr(data-title)
      font-size 1rem
      text-align center
      border solid rgba(white, .5);
      border-radius 6px
      padding 0.5rem 1.5rem 
      line-height 1.5rem
      color #fff
      top 45%
      left 40%
      display inline-block
      transition .5s
    
  &__description
    color #A2A2A2
    margin-bottom 3rem

