.footer
  background -moz-linear-gradient(top, rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('images/banner.jpg') no-repeat center / cover
  background -webkit-linear-gradient(top, rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('images/banner.jpg') no-repeat center / cover
  background linear-gradient(top, rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('images/banner.jpg') no-repeat center / cover
  position relative
  width 100%
  text-align center
  padding-bottom 4rem
  @media (min-width 992px)
    background transparent
    position fixed
    text-align right
    width 30%
    left 0
    bottom 0
  &__icon
    color rgba(white, 0.5)
    transition .3s ease-in-out
    margin 0 0.7rem
  &__icon:hover, &__icon:active, &__icon:focus
    color #49bf9d
  &__copyrights
    color rgba(white, 0.5)
    list-style none 
    font-size 1rem
    line-height 1.7rem
    @media (max-width 992px)
      font-size 0.7rem
      line-height 1.2rem
    li
      display inline-block
      list-style none
      padding 0 0.75rem 
      &:not(:last-child)
        border-right 1px solid rgba(white, 0.4)
      