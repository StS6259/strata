.button
  display inline-block
  text-decoration none
  color #787878
  padding .8rem 2rem
  border-radius 6px
  font-size 1.5rem
  text-align center
  font-weight 400
  cursor pointer
  border 4px solid #EFEFEF
  transition .4s ease-in-out
  background transparent
  // max-width 400px
  margin-right auto
  margin-left auto
  margin-top 1rem
  margin-bottom 4rem
  padding 1.5rem 4rem

.button:hover
  border 2px solid #49bf9d
  color #49bf9d
  transition .4s ease-in-out