.button
  display inline-block
  text-decoration none
  color #787878
  padding .8rem 2rem
  border-radius 6px
  font-size 1.5rem
  text-align center
  font-weight 400
  cursor pointer
  border 4px solid #EFEFEF
  transition .3s ease-in-out
  background transparent
  // max-width 400px
  margin-right auto
  margin-left auto
  margin-top 2rem
  margin-bottom 4rem
  padding 1.5rem 3rem
  text-transform capitalize

.button:hover
  border 4px solid #49bf9d
  color #49bf9d
